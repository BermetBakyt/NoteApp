<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noteContentParent"
    tools:context=".presentation.ui.fragments.update.UpdateNoteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:id="@+id/toolbarNoteContent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:focusable="true"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round_arrow_back_24"
            android:id="@+id/backBtn"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lastEdited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/google_sans_regular"
            tools:text="Edited On"
            android:textColor="black"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textAlignment="center"/>


        <ImageView
            android:id="@+id/saveNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingBottom="5dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_save_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            app:tint="@color/black"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarNoteContent" >

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/editTitle"
                    android:inputType="none"
                    android:textSize="22sp"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/google_sans_medium"
                    android:hint="Note Title"/>

                <com.yahiaangelo.markdownedittext.MarkdownEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:fontFamily="@font/google_sans_regular"
                    android:hint="Note"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:id="@+id/editNoteContent" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_color_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_baseline_color_lens_24"
            android:tint="@color/purple"
            app:backgroundTint="@color/purple"/>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBar"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <com.yahiaangelo.markdownedittext.MarkdownStylesBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stylesBar"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:padding="5dp"/>
    </LinearLayout>

</RelativeLayout>